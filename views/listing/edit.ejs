<%layout("/layouts/boilerplate") %>
<body>
    
    <div class="row mt-3">
        <div class="col col-8 offset-2">
            <h2>Edit your listing</h2>
    <form method="post" action="/listings/<%=listings._id%>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="col mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" class="form-control" value="<%=listings.title%>" required>
        <div class="valid-feedback">Title Looks good</div>
    </div>
    <div class="col mb-3">
        <label for="description" class="form-label">Description</label>
        <input type="text" name="listing[description]" class="form-control" value="<%=listings.description%>" required>
        <div class="invalid-feedback">Please enter a short description</div>
    </div>
    <div class="mb-3">Original image <br>
        <img  class="edit" src="<%=originalImageUrl %>" alt="">
    </div>
    <div class="col mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="file" name="listing[image]" class="form-control">
    </div> 
    <div class="row mb-3">
    <div class="col col-md-4 ">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="listing[price]" class="form-control" value="<%=listings.price%>" required>
        <div class="invalid-feedback">Price should be valid</div>
    </div>
    <div class="col col-md-8">
       <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" class="form-control" value="<%=listings.country%>" required>
        <div class="invalid-feedback">Country should be valid</div>
    </div>
</div>
 <div class="col mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" name="listing[location]" class="form-control" value="<%=listings.location%>" required>
        <div class="invalid-feedback">Location should be valid</div>
    </div>
        <button class="btn btn-edit">edit</button>
    </form>
</div>
</div>
<!-- <script src="/js/script.js"></script> -->
</body>
